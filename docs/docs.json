{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Vibe Kanban",
  "description": "A kanban board for developers to track coding tasks with AI coding agents",

  "colors": {
    "primary": "#000000",
    "light": "#fefefe",
    "dark": "#121212"
  },
  "background": {
    "color": {
      "light": "#FAF9F5",
      "dark": "#2F2F2D"
